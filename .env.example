# .env.example

# Application
NODE_ENV=production
PORT=3001

# Database
DB_PASSWORD=your-secure-db-password
DATABASE_URL=postgresql://postgres:your-secure-db-password@localhost:5432/bitci_futures?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# JWT (Generate with: openssl rand -base64 64)
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-64-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-at-least-64-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Key (Must be exactly 32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key!

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM="Matic Trade <noreply@bitci.com>"

# URLs
FRONTEND_URL=https://your-domain.com
API_URL=https://api.your-domain.com
WS_URL=wss://api.your-domain.com